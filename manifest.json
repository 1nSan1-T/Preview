{
  "manifest_version": 3,
  "name": "Site Previewer",
  "version": "1.0",
  "description": "A preview utility for sites",
  "icons": [
    {
      "src": "icon16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "icon32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "icon48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "icon128.png",
      "sizes": "128x128",
      "type": "image/png"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Site Previewer",
    "default_popup": {
      "href": "popup.html"
    },
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        {
          "src": "content.js",
          "injectInto": "content",
          "runAt": "document_end"
        }
      ]
    }
  ]
}
